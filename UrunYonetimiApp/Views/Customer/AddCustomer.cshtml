@{
    ViewData["Title"] = "AddCustomer";
}

<h1>AddCustomer</h1>

<form asp-action="AddCustomer" asp-controller="Customer" method="post">
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold">Müşteri Ad</label>
        <div class="col-lg-6">
            <input type="text" name="CustomerName" class="form-control">
           
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold">Telefon</label>
        <div class="col-lg-6">
            <input type="text" name="PhoneNumber" class="form-control">
          
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold">Adres</label>
        <div class="col-lg-6">
            <input type="text" name="Address" class="form-control">
            
        </div>
    </div>
    
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold"></label>
        <div class="col-lg-6">
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success btn-sm">Müşteri Ekle</button>&nbsp;
                <a href="/Customer/Index/" class="btn btn-danger btn-sm">Vazgeç</a>
            </div>
        </div>
    </div>

</form>
