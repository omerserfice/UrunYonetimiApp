@using UrunYonetimDAL.DTO.Customer
@model GetCustomerDto

@{
    ViewData["Title"] = "DetailCustomer";
    Layout = "~/Views/Shared/UrunLayout.cshtml";
}

<hr />
<h1>Müşteri Güncelleme Sayfası</h1>

<form asp-action="UpdateCustomer" asp-controller="Customer" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold">Müşteri Ad</label>
        <div class="col-lg-6">
            <input type="text" name="CustomerName" value="@Model.CustomerName" class="form-control">
           
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold">Telefon</label>
        <div class="col-lg-6">
            <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control">
          
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold">Adres</label>
        <div class="col-lg-6">
            <input type="text" name="Address" value="@Model.Address" class="form-control">
            
        </div>
    </div>
    
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold"></label>
        <div class="col-lg-6">
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-warning btn-sm">Güncelle</button>&nbsp;
                <a href="/Customer/Index/" class="btn btn-danger btn-sm">Vazgeç</a>
            </div>
        </div>
    </div>

</form>