@using UrunYonetimDAL.DTO.Product
@model GetProductDto
@{
    ViewData["Title"] = "DetailProduct";
    Layout = "~/Views/Shared/UrunLayout.cshtml";
}

<hr />
<h1>Müşteri Güncelleme Sayfası</h1>

<form asp-action="UpdateProduct" asp-controller="Product" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold">Ürün Adı</label>
        <div class="col-lg-6">
            <input type="text" name="ProductName" value="@Model.ProductName" class="form-control">
           
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold">Fiyat</label>
        <div class="col-lg-6">
            <input type="text" name="Price" value="@Model.Price" class="form-control">
          
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold">Miktar</label>
        <div class="col-lg-6">
            <input type="text" name="Quantity" value="@Model.Quantity" class="form-control">
            
        </div>
    </div>
    
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold"></label>
        <div class="col-lg-6">
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-warning btn-sm">Güncelle</button>&nbsp;
                <a href="/Product/Index/" class="btn btn-danger btn-sm">Vazgeç</a>
            </div>
        </div>
    </div>

</form>

