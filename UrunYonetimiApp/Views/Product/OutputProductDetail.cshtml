@using UrunYonetimDAL.DTO.Customer

@{
    ViewData["Title"] = "OutputProduct";
    Layout = "~/Views/Shared/UrunLayout.cshtml";
}
@{
    List<GetCustomerListDto> musteriler = ViewBag.Musteriler;
    var alert = ViewBag.Alert;
    
}
<hr />
<h1>Ürün Çıkış Sayfası</h1>

<form asp-action="OutputProduct" asp-controller="Product" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" name="Quantity" value="@Model.Quantity" />
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold">Müşteri</label>
        <div class="col-lg-6">
           <select name="customerId" class="form-control">
               <option value="">Seçiniz</option>
               @foreach (var item in musteriler)
              {
                    <option value="@item.Id">@item.CustomerName</option>
              }
               <option></option>

           </select>
           
        </div>
    </div>
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold">Miktar</label>
        <div class="col-lg-6">
            <input type="text" name="SelectQuantity" value="" class="form-control">
            
        </div>
    </div>
    
    <div class="form-group row">
        <label class="col-lg-3 col-form-label text-right font-weight-bold"></label>
        <div class="col-lg-6">
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-warning btn-sm">Ürün Çıkışı Yap</button>&nbsp;
                <a href="/Product/Index/" class="btn btn-danger btn-sm">Vazgeç</a>
            </div>
        </div>
    </div>
   


</form>


